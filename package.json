{
  "name": "pino-loki-ky",
  "type": "commonjs",
  "version": "2.4.0",
  "description": "Fork of pino-loki that uses `ky` instead of `got`.",
  "license": "MIT",
  "homepage": "https://github.com/nxht/pino-loki-ky#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nxht/pino-loki-ky.git"
  },
  "bugs": {
    "url": "https://github.com/nxht/pino-loki-ky/issues"
  },
  "keywords": ["pino", "pino-transport", "loki", "logging"],
  "main": "./dist/index.cjs",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs",
    "bun": "./src/index.ts"
  },
  "bin": {
    "pino-loki-ky": "./dist/cli.mjs"
  },
  "files": ["dist"],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepublishOnly": "pnpm build",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "stub": "unbuild --stub",
    "quick:test": "node -r ts-node/register bin/test.ts",
    "test": "c8 node -r ts-node/register bin/test.ts",
    "typecheck": "tsc --noEmit",
    "checks": "pnpm typecheck && pnpm lint && pnpm test"
  },
  "dependencies": {
    "ky": "^1.7.1",
    "pino-abstract-transport": "^1.2.0"
  },
  "optionalDependencies": {
    "commander": "^12.1.0",
    "pump": "^3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@japa/assert": "^1.4.1",
    "@japa/runner": "^2.5.1",
    "@japa/spec-reporter": "^1.3.3",
    "@types/node": "^22.5.0",
    "@types/pump": "^1.1.3",
    "bumpp": "^9.4.1",
    "c8": "^9.1.0",
    "nock": "^13.5.4",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "unbuild": "^2.0.0"
  }
}
